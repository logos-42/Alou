{
  "name": "mcp-host-cli",
  "main": "dist/cli.js",
  "bin": "dist/cli.js",
  "pkg": {
    "scripts": [
      "dist/**/*.js"
    ],
    "assets": [
      "node_modules/@modelcontextprotocol/sdk/**/*.js",
      "node_modules/@modelcontextprotocol/sdk/**/*.json",
      "node_modules/axios/**/*.js",
      "node_modules/dotenv/**/*.js",
      "node_modules/cross-spawn/**/*.js",
      "node_modules/zod/**/*.js"
    ],
    "targets": ["node18-win-x64"],
    "outputPath": ".",
    "compress": "Brotli"
  }
} 